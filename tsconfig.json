{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "dist",
        "moduleResolution": "node",
        "target": "ES2018",
        "module": "CommonJS",
        "strict": true,
        "pretty": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "importHelpers": true,
        "declaration": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
    },
    "include": [
        "src"
    ]
